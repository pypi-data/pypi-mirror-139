<feature id="174" name="fcr">
	Flight camera recording feature
	<enums>
		<enum name="pipeline">
			Type of pipeline.
			<value name="fstcam_left_timelapse">
				Drone left stereo camera pipeline.
			</value>
			<value name="fstcam_right_timelapse">
				Drone right stereo camera pipeline.
			</value>
			<value name="fcam_timelapse">
				Drone front camera pipeline.
			</value>
			<value name="fstcam_left_emergency">
				Drone left stereo camera last frames pipeline.
			</value>
			<value name="fstcam_right_emergency">
				Drone right stereo camera last frames pipeline.
			</value>
			<value name="fcam_emergency">
				Drone front camera last frames pipeline.
			</value>
			<value name="fcam_tracking">
				Drone front camera tracking pipeline.
			</value>
			<value name="vcam_precisehome">
				Drone vertical camera precise home pipeline.
			</value>
			<value name="fstcam_left_obstacleavoidance">
				Drone left stereo camera obstacle avoidance pipeline.
			</value>
			<value name="fstcam_right_obstacleavoidance">
				Drone right stereo camera obstacle avoidance pipeline.
			</value>
			<value name="vcam_precisehovering">
				Drone vertical camera precise hovering pipeline.
			</value>
			<value name="fstcam_left_calibration">
				Drone left stereo camera love calibration pipeline.
			</value>
			<value name="fstcam_right_calibration">
				Drone right stereo camera love calibration pipeline.
			</value>
			<value name="fstcam_right_precisehovering">
				Drone right stereo camera precise hovering pipeline.
			</value>
			<value name="fstcam_left_event">
				Drone left stereo camera specific events pipeline.
			</value>
			<value name="fstcam_right_event">
				Drone right stereo camera specific events pipeline.
			</value>
			<value name="fcam_event">
				Drone front camera event pipeline.
			</value>
		</enum>
	</enums>
	<msgs>
		<evt name="capabilities" id="1">
			<comment
				title="Drone recording capabilities"
				support="091a"
				triggered="only during the connection"/>
			<arg name="capabilities" type="bitfield:u64:pipeline">
				List of recording capabilities of the drone.
			</arg>
		</evt>
		<evt name="state" id="2">
			<comment
				title="Drone recording state"
				support="091a"
				triggered="during connection and by [configure_pipelines](#174-3)"/>
			<arg name="state" type="bitfield:u64:pipeline">
				List of activated recordings.
			</arg>
		</evt>
		<cmd name="configure_pipelines" id="3">
			<comment
				title="configure flight camera pipelines"
				desc="Allows to configure which flight camera pipelines are active."
				support="091a"
				result="Event [state](#174-2) is triggered"/>
			<arg name="pipelines" type="bitfield:u64:pipeline">
				Pipeline configuration. 1 activates the corresponding pipeline, 0 deactivates it.
			</arg>
			<expectations>
				<immediate>
					#174-2
				</immediate>
			</expectations>
		</cmd>
	</msgs>
</feature>
