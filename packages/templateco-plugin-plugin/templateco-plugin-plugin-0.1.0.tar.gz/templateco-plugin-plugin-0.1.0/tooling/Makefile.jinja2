SHELL := bash
.ONESHELL:
.SHELLFLAGS := -eu -o pipefail -c
.DELETE_ON_ERROR:
MAKEFLAGS += --warn-undefined-variables
TARGET ?= .

install: ## Install the app locally.
	poetry install
.PHONY: install

ci:  ## Same as `npm ci`: Delete the venv and reinstall.
	poetry env remove python; true
	make install
.PHONY: ci

test:  ## Run tests.
	poetry run pytest $(TARGET)
.PHONY: test

lint:  ## Run linting.
	poetry run mypy --show-error-codes --pretty $(TARGET)
	poetry run black --check $(TARGET)
	poetry run isort -c $(TARGET)
	poetry run flake8 $(TARGET)
	poetry run pydocstyle $(TARGET)
.PHONY: lint

fix: ## Run auto-formatters.
	poetry run black $(TARGET)
	poetry run isort $(TARGET)
.PHONY: fix

.DEFAULT_GOAL := help
help: Makefile
	@grep -E '(^[a-zA-Z_-]+:.*?##.*$$)|(^##)' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[32m%-30s\033[0m %s\n", $$1, $$2}' | sed -e 's/\[32m##/[33m/'
